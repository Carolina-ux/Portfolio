---
import SEOMeta from "../components/SEOMeta.astro";

interface Props {
  seoTitle?: string;
  seoDescription?: string;
  seoImage?: string;
  seoType?: "website" | "article";
  seoKeywords?: string;
  seoAuthor?: string;
  lang?: string;
}

const {
  seoTitle,
  seoDescription,
  seoImage,
  seoType = "website",
  seoKeywords,
  seoAuthor,
  lang = "en",
} = Astro.props;

const base = import.meta.env.BASE_URL ?? "/";
const normalizedBase = base.endsWith("/") ? base : `${base}/`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${normalizedBase}favicon.svg`}
    />
    <meta name="generator" content={Astro.generator} />
    <SEOMeta
      title={seoTitle}
      description={seoDescription}
      image={seoImage}
      type={seoType}
      keywords={seoKeywords}
      author={seoAuthor}
      lang={lang}
    />
    <link rel="stylesheet" href={`${normalizedBase}assets/css/style.css`} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
</style>
