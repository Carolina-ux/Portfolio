---
import { LINKS_TYPES } from "../types/types";
import Link from "./Link.astro";
import LinkIcon from "./linkIcon.astro";
interface Props {
  title?: string;
  subtitle?: string;
  imageSrc?: string;
  linkUrl?: string;
  slug?: string;
}

const {
  title = "Project title",
  subtitle = "Project subtitle",
  imageSrc,
  linkUrl,
  slug,
}: Props = Astro.props;
const base = import.meta.env.BASE_URL ?? "/";
const normalizedBase = base.endsWith("/") ? base : `${base}/`;
const withBase = (path?: string) => {
  if (!path) return undefined;
  if (/^https?:\/\//.test(path)) return path;
  const cleanedPath = path.replace(/^\.\//, "").replace(/^\//, "");
  return `${normalizedBase}${cleanedPath}`;
};

const safeImageSrc =
  withBase(imageSrc) ?? `${normalizedBase}assets/img/carolina-img.avif`;
const resolvedLink = linkUrl
  ? (withBase(linkUrl) ?? linkUrl)
  : slug
    ? `${normalizedBase}proyects/${slug}`
    : undefined;
---

<div class="proyect-card">
  <div class="card-body">
    <div class="card-title">
      <h3 class="h3">
        {
          resolvedLink && (
            <Link
              url={resolvedLink}
              variant={LINKS_TYPES.TERTIARY}
              target={resolvedLink.startsWith("http") ? "_blank" : undefined}
            >
              {title}
              <LinkIcon />
            </Link>
          )
        }
      </h3>
      <p>{subtitle}</p>
    </div>
  </div>
  <figure>
    <img src={safeImageSrc} alt={title} loading="lazy" />
  </figure>

  <style>
    div.proyect-card {
      display: flex;
      flex-direction: row-reverse;
      justify-content: flex-end;
      align-items: center;
      gap: 32px;
      width: 90vw;
      max-width: 824px;
      flex-wrap: wrap;

      & div.card-title {
        & p {
          color: var(--text-muted);
        }

        & h3.h3 {
          font-size: 2.5rem !important;
          line-height: 1.3;
          margin: 0;
        }
      }

      & div.card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        height: 208px;
        flex: 1;
        min-width: 250px;
      }

      & figure {
        width: 320px;
        height: 342px;
        min-width: 320px;
        min-height: 342px;
        margin: 0;
        padding: 0;
        overflow: hidden;
        border-radius: 16px;
        border: 4px solid var(--border-color);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);

        & img {
          display: block;
          width: 100%;
          height: 100%;
          border-radius: 12px;
          object-fit: cover;
          object-position: center;
        }
      }

      & h3 a.link {
        font-size: 2.5rem;
        line-height: 1.3;
        padding: 0;
        color: var(--h2-color);
        text-decoration: none;
        text-transform: capitalize;
        gap: 10px;
        transition:
          color 0.2s ease,
          transform 0.2s ease;

        &:hover {
          color: var(--coral);
          transform: translateY(-2px);
        }
      }
    }

    @media (max-width: 768px) {
      div.proyect-card {
        flex-direction: column-reverse;
      }
    }
  </style>
</div>
