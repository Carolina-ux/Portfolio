---
import Layout from "../../layouts/Layout.astro";
import { getCollection, getEntry } from "astro:content";
import type { CollectionEntry, InferEntrySchema } from "astro:content";
import Header from "../../components/Header.astro";

type ProjectEntry = CollectionEntry<"projects">;

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
  }));
}

const { slug } = Astro.params as { slug: ProjectEntry["slug"] };
const entry = await getEntry("projects", slug);

if (!entry) {
  return Astro.redirect("/404");
}

const { Content, headings } = await entry.render();
const data: InferEntrySchema<"projects"> = entry.data;
const pageTitle = data.title ?? slug;

const seoDescription =
  data.description ??
  data.subtitle ??
  `Case study: ${pageTitle} - Carolina Ruzafa UX/UI Design Portfolio`;

const seoKeywords =
  data.keywords?.join(", ") ??
  "UX Design, UI Design, Case Study, Portfolio, User Experience";

const base = import.meta.env.BASE_URL ?? "/";
const normalizedBase = base.endsWith("/") ? base : `${base}/`;
const withBase = (path?: string) => {
  if (!path) return undefined;
  if (/^https?:\/\//.test(path)) return path;
  const cleanedPath = path.replace(/^\.\//, "").replace(/^\//, "");
  return `${normalizedBase}${cleanedPath}`;
};
const heroImage = withBase(data.image);
const columns = data.columns ?? [];

const allProjects = await getCollection("projects");
const currentIndex = allProjects.findIndex((p) => p.slug === slug);
const prev = currentIndex > 0 ? allProjects[currentIndex - 1] : undefined;
const next =
  currentIndex >= 0 && currentIndex < allProjects.length - 1
    ? allProjects[currentIndex + 1]
    : undefined;
---

<Layout
  seoTitle={pageTitle}
  seoDescription={seoDescription}
  seoImage={data.image}
  seoType="article"
  seoKeywords={seoKeywords}
  seoAuthor="Carolina Ruzafa"
  lang="en"
>
  <Header selectedPage="projects" />
  <main class="project-page">
    <article>
      <header>
        <p class="kicker">Project</p>
        <h1>{pageTitle}</h1>
        {data.subtitle && <p class="subtitle">{data.subtitle}</p>}
      </header>

      {
        heroImage && (
          <figure>
            <img src={heroImage} alt={pageTitle} loading="lazy" />
          </figure>
        )
      }

      {
        columns.length ? (
          <section class="info-grid">
            {columns.map((col) => (
              <div class="info-card">
                <p class="info-title">{col.title}</p>
                {col.items?.length ? (
                  <ul>
                    {col.items.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                ) : null}
              </div>
            ))}
          </section>
        ) : null
      }

      <Content />

      {
        data.link && (
          <p class="cta">
            <a
              href={data.link}
              target={data.link.startsWith("http") ? "_blank" : undefined}
            >
              Ver proyecto
            </a>
          </p>
        )
      }

      {
        (prev || next) && (
          <nav class="pager">
            {prev && (
              <a href={`${normalizedBase}proyects/${prev.slug}`} rel="prev">
                ← {prev.data.title}
              </a>
            )}
            {next && (
              <a href={`${normalizedBase}proyects/${next.slug}`} rel="next">
                {next.data.title} →
              </a>
            )}
          </nav>
        )
      }
    </article>

    {
      headings?.length ? (
        <aside class="toc">
          <p class="toc-title">Contenido</p>
          <ul>
            {headings.map((h) => (
              <li class={`lvl-${h.depth}`}>
                <a href={`#${h.slug}`}>{h.text}</a>
              </li>
            ))}
          </ul>
        </aside>
      ) : null
    }
  </main>
</Layout>

<style>
  main.project-page {
    display: grid;
    grid-template-columns: 1fr 280px;
    gap: 48px;
    padding: 120px clamp(16px, 4vw, 64px);
  }

  article {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  header .kicker {
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--text-muted);
    margin: 0;
    font-size: 14px;
  }

  header h1 {
    margin: 0;
    font-size: clamp(28px, 5vw, 42px);
    color: var(--h1-color, #1a1a2c);
  }

  header .subtitle {
    margin: 8px 0 0;
    color: var(--text-muted);
    font-size: 16px;
  }

  figure {
    margin: 0;
    border-radius: 16px;
    overflow: hidden;
    background: var(--bg-2-color, #f3f4f8);
  }

  figure img {
    display: block;
    width: 100%;
    height: auto;
  }

  section.info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 16px;
    margin: 8px 0 4px;
  }

  .info-card {
    border: 1px solid var(--bg-2-color, #f3f4f8);
    border-radius: 12px;
    padding: 16px;
    background: var(--bg-1-color, #ffffff);
  }

  .info-title {
    margin: 0 0 8px;
    font-weight: 700;
    color: var(--h3-color, #1a1a2c);
    font-size: 16px;
  }

  .info-card ul {
    margin: 0;
    padding-left: 18px;
    color: var(--text-muted);
    display: grid;
    gap: 6px;
    font-size: 14px;
  }

  .cta a {
    display: inline-block;
    margin-top: 8px;
    padding: 12px 16px;
    border-radius: 12px;
    background: var(--bg-2-color, #f3f4f8);
    color: var(--link-color, #3750d4);
    text-decoration: none;
    font-weight: 600;
    transition:
      transform 0.2s ease,
      filter 0.2s ease;
  }

  .cta a:hover {
    transform: translateY(-2px);
    filter: brightness(1.05);
  }

  aside.toc {
    position: sticky;
    top: 120px;
    align-self: start;
    padding: 16px;
    border: 1px solid var(--bg-2-color, #f3f4f8);
    border-radius: 12px;
    background: var(--bg-1-color, #ffffff);
  }

  .toc-title {
    margin: 0 0 8px;
    font-weight: 700;
    color: var(--text-muted);
    font-size: 14px;
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  .toc ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .toc li a {
    color: var(--link-tertiary, #424257);
    text-decoration: none;
    font-size: 14px;
  }

  .toc li a:hover {
    text-decoration: underline;
  }

  .toc li.lvl-2 {
    padding-left: 12px;
    font-size: 13px;
  }

  .pager {
    display: flex;
    justify-content: space-between;
    gap: 16px;
    margin-top: 16px;
    flex-wrap: wrap;
  }

  .pager a {
    text-decoration: none;
    color: var(--link-color, #3750d4);
    font-weight: 600;
    background: var(--bg-2-color, #f3f4f8);
    padding: 10px 12px;
    border-radius: 10px;
    transition:
      transform 0.2s ease,
      filter 0.2s ease;
  }

  .pager a:hover {
    transform: translateY(-2px);
    filter: brightness(1.05);
  }

  @media (max-width: 768px) {
    main.project-page {
      grid-template-columns: 1fr;
      padding: 100px 24px 32px;
      gap: 32px;
    }

    article {
      gap: 20px;
    }

    header h1 {
      font-size: clamp(24px, 6vw, 36px);
    }

    header .subtitle {
      font-size: 15px;
    }

    section.info-grid {
      grid-template-columns: 1fr;
      gap: 12px;
    }

    .info-card {
      padding: 14px;
    }

    figure {
      border-radius: 12px;
    }

    .cta a {
      width: 100%;
      text-align: center;
      padding: 14px 16px;
    }

    .pager {
      flex-direction: column;
      gap: 12px;
    }

    .pager a {
      width: 100%;
      text-align: center;
      padding: 12px 16px;
    }

    aside.toc {
      position: static;
      order: -1;
    }
  }
</style>
